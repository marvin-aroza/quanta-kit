{
  "name": "quanta-kit-monorepo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "storybook": "ng run ui-kit:storybook",
    "build-storybook": "ng run ui-kit:build-storybook",
    "test-storybook": "test-storybook -c projects/ui-kit/.storybook",
    "lint": "ng lint",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,scss}\"",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "node scripts/publish-library.js",
    "release:alpha:enter": "changeset pre enter alpha",
    "release:alpha:exit": "changeset pre exit",
    "release:beta:enter": "changeset pre enter beta",
    "release:beta:exit": "changeset pre exit",
    "release:rc:enter": "changeset pre enter rc",
    "release:rc:exit": "changeset pre exit",
    "release:exit": "changeset pre exit",
    "release:snapshot": "changeset version --snapshot && changeset publish --tag canary",
    "generate": "plop"
  },
  "lint-staged": {
    "*.{ts,js,json,md,html,scss}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "packageManager": "npm@11.6.2",
  "overrides": {
    "@modelcontextprotocol/sdk": "^1.24.0"
  },
  "dependencies": {
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/platform-browser": "^21.0.2",
    "@angular/router": "^21.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2100.1",
    "@angular-devkit/build-angular": "^21.0.1",
    "@angular-devkit/core": "^21.0.1",
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@angular/platform-browser-dynamic": "^21.0.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@compodoc/compodoc": "^1.1.32",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/angular": "^10.1.2",
    "@storybook/test-runner": "^0.24.2",
    "@vitest/browser-playwright": "^4.0.15",
    "angular-eslint": "21.0.1",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^21.0.0",
    "playwright": "^1.57.0",
    "plop": "^4.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "storybook": "^10.1.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}
